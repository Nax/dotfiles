[core]
    excludesfile        = "$HOME/.gitignore"
    eol                 = lf
    autocrlf            = input
[credential]
    helper              = "cache --timeout 86400"
[rerere]
    enabled             = 1
    autoupdate          = 1
[pull]
    rebase              = true
[push]
    default             = current
    recurseSubmodules   = on-demand
[status]
    short               = true
    showUntrackedFiles  = all
[user]
    useConfigOnly       = true
[color]
    ui                  = always
[color "branch"]
    current             = yellow bold
    local               = green bold
    remote              = cyan bold
[color "diff"]
    meta                = yellow bold
    frag                = magenta bold
    old                 = red bold
    new                 = green bold
    whitespace          = red reverse
[color "status"]
    added               = green bold
    changed             = yellow bold
    untracked           = red bold
[merge]
    tool                = vimdiff2
[mergetool]
    prompt              = true
[mergetool "vimdiff2"]
    cmd                 = "$VISUAL" -f -d -c 'wincmd l' "$LOCAL" "$MERGED" "$REMOTE"
[include]
    path                = ~/.gitconfig.local
